---
import Layout from "@layouts/Layout.astro";
import { siteConfig } from "@/config";
import { url } from "../utils/url-utils";
---

<Layout title="404 Not Found" description="Page not found">
  <div class="min-h-screen flex flex-col items-center justify-center px-4 py-16">
    <div class="text-center max-w-md">
      <div class="text-[120px] font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-purple-500 mb-6">
        404
      </div>
      <h1 class="text-3xl font-bold mb-4">{siteConfig.lang === 'zh_CN' ? '页面未找到' : 'Page Not Found'}</h1>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        {siteConfig.lang === 'zh_CN' 
          ? '抱歉，您访问的页面不存在或已被移除。' 
          : 'Sorry, the page you are looking for does not exist or has been removed.'}
      </p>
      <a 
        href={url("/")} 
        class="inline-flex items-center px-6 py-3 bg-primary hover:bg-primary/90 text-white font-medium rounded-full transition-all duration-300 transform hover:scale-105"
      >
        {siteConfig.lang === 'zh_CN' ? '返回首页' : 'Go Back Home'}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</Layout>

<style>
  .bg-clip-text {
    -webkit-background-clip: text;
    background-clip: text;
  }
  
  .text-transparent {
    color: transparent;
  }
</style>