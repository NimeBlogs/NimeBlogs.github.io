---
import Layout from "@layouts/Layout.astro";
import { siteConfig } from "@/config";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { url } from "../utils/url-utils";
---

<MainGridLayout title={i18n(I18nKey.unfind)} description={i18n(I18nKey.unfind)}>
    <div class="flex flex-col items-center justify-center px-4 py-16 relative overflow-hidden">
      
      <div class="text-center max-w-md relative z-10">
        <!-- 404数字动画效果 -->
        <div class="text-[120px] font-bold bg-clip-text bg-gradient-to-r from-primary dark:text-white mb-6 animate-fade-in-up">
          404
        </div>
        <h1 class="text-3xl dark:text-gray-400 font-bold mb-4 animate-fade-in-up animation-delay-200">{siteConfig.lang === 'zh_CN' ? '页面未找到' : 'Page Not Found'}</h1>
        <p class="text-gray-600 dark:text-gray-400 mb-8 animate-fade-in-up animation-delay-400">
          {siteConfig.lang === 'zh_CN' 
            ? '抱歉，您访问的页面不存在或已被移除。' 
            : 'Sorry, the page you are looking for does not exist or has been removed.'}
        </p>
        <a 
          href={url("/")} 
          class="inline-flex items-center px-6 py-3 bg-primary hover:bg-primary/90 text-white font-medium rounded-full transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-primary/20 animate-fade-in-up animation-delay-600"
        >
          {siteConfig.lang === 'zh_CN' ? '返回首页' : 'Go Back Home'}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </Layout>

  <style>
    .bg-clip-text {
      -webkit-background-clip: text;
      background-clip: text;
    }
    
    .text-transparent {
      color: transparent;
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .animate-fade-in-up {
      animation: fadeInUp 0.6s ease-out forwards;
    }
    
    .animation-delay-200 {
      animation-delay: 200ms;
    }
    
    .animation-delay-400 {
      animation-delay: 400ms;
    }
    
    .animation-delay-600 {
      animation-delay: 600ms;
    }
    
    @keyframes pulse {
      0%, 100% {
        opacity: 0.3;
      }
      50% {
        opacity: 0.6;
      }
    }
    
    .animate-pulse {
      animation: pulse 6s ease-in-out infinite;
    }
    
    .delay-700 {
      animation-delay: 700ms;
    }
  </style>
</MainGridLayout>