	// 使用更复杂的算法生成不统一的分数，包含小数
	const prime1 = 31;
	const prime2 = 101;
	const prime3 = 173;
	const prime4 = 257;

	// 基础值计算，使用多个素数和日期组合增加随机性
	const base = ((dayOfYear * prime1 + offset * prime2) % max) + 1;

	// 生成小数部分，范围0-0.99
	const decimal =
		((Math.sin(dayOfYear * prime3 + offset * prime4) * 100) % 100) / 100;

	// 生成更大的方差
	const varianceFactor = (Math.cos(dayOfYear) + 1) * 0.5; // 0-1之间
	const variance = Math.floor(varianceFactor * 2); // 0-2之间的整数，减少方差范围

	// 最终分数，加入随机性和小数
	let score = base + decimal + (Math.random() > 0.5 ? variance : -variance);

	// 确保分数在合理范围内，不超过满分
	return Math.min(Math.max(score, 1), max);
};

